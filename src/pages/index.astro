---
import Layout from '~/layouts/PageLayout.astro';


import HeroAnimation from '~/components/widgets/HeroAnimation.astro';
//import Note from '~/components/widgets/Note.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';


const metadata = {
  title: 'Andy Poplas\' Portfolio',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <section>
    <HeroAnimation>
    </HeroAnimation>
  </section>

  <!-- Note Widget ******************* -->

  <!--<Note /> -->

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'I offer services in multiple fields',
        description:
          '<ul class="text-muted mt-3 ml-2" style="list-style:inside;">\
            <li>Graphic Design</li>\
            <li>UI/UX</li>\
            <li>Web Development</li>\
            <li>Video Editing</li>\
          </ul>',
        icon: 'tabler:mail',
      },
      {
        title: 'While I\'m also interested in many others as well',
        description:
          '<ul class="text-muted mt-3 ml-2" style="list-style:inside;">\
            <li>3D Modeling</li>\
            <li>Game Design & Development</li>\
            <li>Music</li>\
            <li>...</li>\
          </ul>',
        icon: '',  
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
    classes={{
      container: "max-w-5xl",
      imageClasses: "flex items-center"
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
       Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <!-- <Fragment slot="bg">
      <div class="absolute inset-0 bg-color-grayishOrange dark:bg-transparent"></div>
    </Fragment> -->
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Recent Projects"
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
      Astro&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Tailwind CSS</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be very surprised by these huge fake numbers you are seeing on this page. <br class="hidden md:inline" />Don't
      waste more time! :P
    </Fragment>
  </CallToAction>
</Layout>
