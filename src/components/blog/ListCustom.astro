---
import type { Post } from '~/types';
import DynamicShowcase from '~/components/blog/DynamicShowcase.astro';
import '~/assets/styles/dynamicPosts.css';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---
<div class="relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20">
  <div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-4 mb-12">
    {
      posts.map((post) => (
        <DynamicShowcase post={post} />
      ))
    }
  </div>
</div>

